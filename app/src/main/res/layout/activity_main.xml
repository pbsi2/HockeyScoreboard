<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/mask_image_view"
        android:layout_width="match_parent"
        android:layout_height="226dp"

        android:layout_below="@+id/city_textview"
        android:contentDescription="TODO"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/scene" />

    <TextView
        android:id="@+id/city_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_orange_light"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical|center_horizontal"
        android:padding="8dp"
        android:text="Inuvik Hockey Association"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t1_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_textview"
        android:height="24dp"
        android:background="@color/colorPrimary"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="HOME"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/team1_home_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1_name_textview"
        android:height="24dp"
        android:background="@color/colorPrimary"

        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Pee-Wee"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/team1_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team1_home_textview"
        android:height="24dp"
        android:background="@color/colorPrimary"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="SCORE"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/t2_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_textview"
        android:layout_alignParentRight="true"
        android:height="24dp"
        android:background="@color/colorPrimary"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Visitor"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/team2_home_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2_name_textview"
        android:layout_alignParentRight="true"
        android:height="24dp"
        android:background="@color/colorPrimary"

        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Parapluie"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/team2_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team2_home_textview"
        android:layout_alignParentRight="true"
        android:height="24dp"
        android:background="@color/colorPrimary"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="SCORE"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold|italic" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/period_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERIOD"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            android:max="40"
            android:progressTint="@android:color/holo_red_dark"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/period_textView" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            android:max="40"
            android:progressTint="@android:color/holo_red_dark"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/progressBar"
            app:layout_constraintTop_toBottomOf="@+id/period_textView" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            android:max="40"
            android:progressTint="@android:color/holo_red_dark"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/progressBar2"
            app:layout_constraintTop_toBottomOf="@+id/period_textView" />

        <Chronometer
            android:id="@+id/time_toplay_textview"
            android:layout_width="148dp"
            android:layout_height="59dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:countDown="true"
            android:ems="10"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
