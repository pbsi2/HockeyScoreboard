<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/mask_image_view"
        android:layout_width="match_parent"
        android:layout_height="226dp"

        android:layout_below="@+id/city_textview"
        android:contentDescription="@string/todo"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/scene" />


    <TextView
        android:id="@+id/city_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical|center_horizontal"
        android:padding="8dp"
        android:shadowColor="@android:color/background_light"
        android:shadowDx="-1.5"
        android:shadowDy="-2.5"
        android:shadowRadius="2.5"
        android:text="Inuvik Hockey Association"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/names_linearview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_textview"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t1_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:shadowColor="@android:color/background_light"
            android:shadowDy="-2"
            android:shadowRadius="2"
            android:text="HOME"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/t2_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:shadowColor="@android:color/background_light"
            android:shadowDy="-2"
            android:shadowRadius="2"
            android:text="Visitor"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/homes_linearview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/names_linearview"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team1_home_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:autofillHints="Name of the Team"
            android:background="@color/colorPrimary"
            android:gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:shadowColor="@android:color/holo_red_dark"
            android:shadowDy="-1.5"
            android:shadowRadius="1.5"
            android:text="Pee-Wee"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/team2_home_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="2"

            android:autofillHints="Name of the Team"
            android:background="@color/colorPrimary"
            android:gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:shadowColor="@android:color/holo_red_dark"
            android:shadowDy="-1.5"
            android:shadowRadius="1.5"
            android:text="Parapluie"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="30sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homes_linearview"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/scores__linearview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="80dp">

            <TextView
                android:id="@+id/team1_score_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team1_home_textview"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:shadowColor="@android:color/background_light"
                android:shadowDy="-2"
                android:shadowRadius="2"
                android:text="SCORE"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emptyview3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/team2_score_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:shadowColor="@android:color/background_light"
                android:shadowDy="-2"
                android:shadowRadius="2"
                android:text="SCORE"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/scores_numbers__linearview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scores__linearview"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/team1_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:ems="10"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emptyview4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/team2_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:ems="10"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scores_numbers__linearview"
            android:background="@color/colorPrimary"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/period_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowColor="@android:color/background_light"
                android:shadowDy="-2"
                android:shadowRadius="2"
                android:text="PERIOD"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/empty6_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/time_text_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowColor="@android:color/background_light"
                android:shadowDy="-2"
                android:shadowRadius="2"
                android:text="Time"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/periods_time_linearview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_linearlayout"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:indeterminate="false"
                android:max="40"
                android:progressTint="@color/colorPrimaryDark"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/period_textView" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:indeterminate="false"
                android:max="40"
                android:progressTint="@color/colorPrimaryDark"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/progressBar"
                app:layout_constraintTop_toBottomOf="@+id/period_textView" />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:indeterminate="false"
                android:max="40"
                android:progressTint="@color/colorPrimaryDark"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/progressBar2"
                app:layout_constraintTop_toBottomOf="@+id/period_textView" />

            <Chronometer
                android:id="@+id/time_toplay_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:countDown="true"
                android:paddingRight="16dp"
                android:textAlignment="textEnd"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/periods_time_linearview"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:id="@+id/control_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CONTROLS"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Timer"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/control_action_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/control_text_layout"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/period_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/first_period_radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="litFirstPeriod"
                        android:text="1st" />

                    <RadioButton
                        android:id="@+id/second_period_radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="litSecondPeriod"
                        android:text="2nd" />

                    <RadioButton
                        android:id="@+id/third_period_radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="litThirdPeriod"
                        android:text="3rd" />
                </RadioGroup>

                <Switch
                    android:id="@+id/start_stop_time_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:onClick="toggleChrono"
                    android:paddingRight="16dp"
                    android:text="Start"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textOff="Start"
                    android:textOn="Stop"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:thumbTint="@color/colorAccent"
                    android:trackTint="@android:color/holo_orange_light" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/control_scores_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/control_action_layout"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/keep_scrore_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scores"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/scores_controls_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_scores_control_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="Home"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/home_control_minus_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_toEndOf="@+id/home_scores_control_textview"
                        android:onClick="substracthomeScored"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/home_controls_plus_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_toEndOf="@+id/home_control_minus_button"
                        android:onClick="homeScored"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/visitor_controls_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/visitor_controls_minus_button"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="Visitor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/visitor_controls_minus_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_toLeftOf="@+id/visitor_controls_plus_button"
                        android:onClick="substractVisitorScored"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/visitor_controls_plus_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentRight="true"
                        android:onClick="visitorScored"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
